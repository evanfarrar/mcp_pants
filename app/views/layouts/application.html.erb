<!DOCTYPE html>
<html>
  <head>
    <title>McpPants</title>
    <%= stylesheet_link_tag :all %>
    <%= csrf_meta_tag %>
    <link rel="stylesheet" type="text/css" href="/stylesheets/typogridphy.css" media="screen" />
    <!--[if IE]><link rel="stylesheet" type="text/css" href="/stylesheets/typogridphyie.css" /><![endif]-->
    <link rel="stylesheet/less" type="text/css" href="/stylesheets/styles.less">
  </head>
  <body>

    <div id="wrapper">
      <div id="header">
        <span id="nav">
          <%= link_to "Home", root_path %>
          &middot;
          <%= link_to "Server Status", log_events_path %>
          &middot;
          <%= link_to "Chat Logs", chat_messages_path %>
          &middot;
          <%= link_to "Player Profiles", players_path %>
          &middot;
          <%= link_to "Worlds", worlds_path %>
        </span>
        <span id="notifications">
          <%= flash[:notification] %>
        </span>
      </div>
      <%= yield %>
      <div class="generic nineforty">
        <p id="footer-nav">
          <%= link_to "Home", root_path %>
          &middot;
          <%= link_to "Server Status", log_events_path %>
          &middot;
          <%= link_to "Chat Logs", chat_messages_path %>
          &middot;
          <%= link_to "Player Profiles", players_path %>
          &middot;
          <%= link_to "Worlds", worlds_path %>
        </p>
        <a href="http://www.colourlovers.com/pattern/1579/Pebbly" target="_blank">Pattern and pallette: Pebbly by Bellabie</a>
      </div>
    </div>
    </div>
    <script src="/javascripts/less.js" type="text/javascript"></script>
    <script src="http://code.jquery.com/jquery-1.5.min.js" type="text/javascript"></script>
    <%= javascript_include_tag "jquery.jeditable.js" %>
    <%= javascript_include_tag "application" %>
  </body>
</html>
